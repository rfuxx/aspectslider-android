<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:descendantFocusability="blocksDescendants"
    >
    <ImageButton style="?android:borderlessButtonStyle"
        android:id="@+id/dirbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2sp"
        android:layout_marginStart="2sp"
        android:src="@android:drawable/ic_media_play"
        android:contentDescription="@string/dir_selectthis"/>
    <TextView style="@style/AppTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/dirbutton"
        android:layout_toStartOf="@+id/dirbutton"
        android:id="@+id/dirname" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_below="@+id/dirname"
        android:layout_toLeftOf="@+id/dirbutton"
        android:layout_toStartOf="@+id/dirbutton"
        android:id="@+id/dirinfo" />
</RelativeLayout>
